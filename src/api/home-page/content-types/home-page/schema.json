{
  "kind": "singleType",
  "collectionName": "home_pages",
  "info": {
    "singularName": "home-page",
    "pluralName": "home-pages",
    "displayName": "Home Page",
    "description": "Homepage hero, highlights, and featured content"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "heroBadge": {
      "type": "string"
    },
    "heroTitle": {
      "type": "string",
      "required": true
    },
    "heroSubtitle": {
      "type": "richtext"
    },
    "heroPrimaryCtaLabel": {
      "type": "string"
    },
    "heroPrimaryCtaLink": {
      "type": "string"
    },
    "heroSecondaryCtaLabel": {
      "type": "string"
    },
    "heroSecondaryCtaLink": {
      "type": "string"
    },
    "heroStats": {
      "type": "component",
      "repeatable": true,
      "component": "shared.stat-item"
    },
    "heroBackgroundImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "featuredServicesTitle": {
      "type": "string"
    },
    "featuredServicesSubtitle": {
      "type": "text"
    },
    "featuredServices": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::service.service"
    },
    "showTestimonials": {
      "type": "boolean",
      "default": false
    },
    "testimonials": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::testimonial.testimonial"
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    }
  }
}
