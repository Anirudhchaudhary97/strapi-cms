{
  "kind": "collectionType",
  "collectionName": "services",
  "info": {
    "singularName": "service",
    "pluralName": "services",
    "displayName": "Service",
    "description": "Service offerings for the security company"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "shortDescription": {
      "type": "text"
    },
    "body": {
      "type": "richtext"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "order": {
      "type": "integer"
    },
    "featureColumns": {
      "type": "component",
      "repeatable": true,
      "component": "service.feature-column"
    },
    "ctaLabel": {
      "type": "string"
    },
    "ctaLink": {
      "type": "string"
    },
    "serviceType": {
      "type": "enumeration",
      "enum": [
        "Guarding",
        "SecuritySystems",
        "Training",
        "Monitoring",
        "QuickResponse",
        "Investigation",
        "Cleaning",
        "Other"
      ],
      "default": "Guarding"
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    }
  }
}
