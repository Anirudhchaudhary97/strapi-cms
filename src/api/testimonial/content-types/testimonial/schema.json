{
  "kind": "collectionType",
  "collectionName": "testimonials",
  "info": {
    "singularName": "testimonial",
    "pluralName": "testimonials",
    "displayName": "Testimonial",
    "description": "Client testimonials and success stories"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "clientName": {
      "type": "string",
      "required": true
    },
    "designation": {
      "type": "string"
    },
    "companyName": {
      "type": "string"
    },
    "companyAddress": {
      "type": "string"
    },
    "rating": {
      "type": "integer",
      "min": 1,
      "max": 5,
      "default": 5
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "photo": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "order": {
      "type": "integer"
    }
  }
}
