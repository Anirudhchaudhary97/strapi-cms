{
  "kind": "singleType",
  "collectionName": "site_settings",
  "info": {
    "singularName": "site-settings",
    "pluralName": "site-configs",
    "displayName": "Site Settings",
    "description": "Global configuration and footer content"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "siteName": {
      "type": "string",
      "required": true
    },
    "logoLight": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "logoDark": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "favicon": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "primaryPhone": {
      "type": "string"
    },
    "secondaryPhone": {
      "type": "string"
    },
    "primaryEmail": {
      "type": "email"
    },
    "address": {
      "type": "text"
    },
    "footerText": {
      "type": "richtext"
    },
    "socialLinks": {
      "type": "component",
      "repeatable": true,
      "component": "shared.social-link"
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    },
    "openGraph": {
      "type": "component",
      "repeatable": false,
      "component": "shared.opengraph"
    }
  }
}
